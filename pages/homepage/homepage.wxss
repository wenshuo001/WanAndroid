/* pages/homepage/homepage.wxss */
.banner_text{
    position: absolute;
    width: 100%;
    height: 80rpx;
    text-align: left;
    line-height:80rpx;
    font-family: cursive;
    left:50%;
    font-weight: bolder;
    bottom: 0;
    color: white;
    transform:translateX(-50%);
    background:black;
    opacity:0.5;
    padding-left: 20rpx;
}

.homepage{
  width: 100%;
  background: white;
}

.page-list{
   width: 100%;
   
}

.page-itemlist{
   width: 100%;
   padding-left: 20rpx;
   position: relative; 
    
}

.page-item {
  width: 100%;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #444;
}

.image_item{
  width: 50rpx;
  height: 50rpx;
}

.page_Autext{
   position: absolute;
   height: 50rpx;
   margin-left: 10rpx;
   line-height: 50rpx;
   font-size: 30rpx;
   color: black;
   font-family:sans-serif;
   font-weight: normal;
   text-align: center;
}

.page_title{
   position: relative;
   height: 50rpx;
   font-size: 38rpx;
   font-weight: bolder;
   margin-right:auto;
   font-family: cursive;
   margin-left:auto;
}

.page_timetext{
    position: absolute;
    right: 0rpx;
    padding-right: 20rpx;
    color: #DFD7D7;
    font-size: 30rpx;
    font-family:sans-serif;
    text-align: center;
}

.page_border{
   
  border:#E9E3E3 solid thin;
  border-width:1rpx;
  border-radius:15rpx;  
  width: 100%;
  position: relative;
}

.line-height{
   width: 100%;
   height: 20rpx;
   position: absolute;
   background: #F7F3F3;
}